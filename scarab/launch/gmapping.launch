<launch>

  <arg name="agent" default="$(optenv AGENT defaultagent)" />

  <arg name="scan_topic"  default="scan"/>
  <arg name="map_topic"   default="map_hokuyo"/>
  <arg name="odom_frame"  default="odom_laser"/>
  <arg name="base_frame"  default="base_link"/>
  <arg name="map_frame"   default="map_hokuyo"/>

  <group ns="$(arg agent)">

    <node pkg="gmapping" type="slam_gmapping" name="mapping"
          output="screen" >
      <remap from="scan" to="$(arg scan_topic)" />
      <remap from="map" to ="$(arg map_topic)" />
      <param name="odom_frame" value="$(arg agent)/odom_laser" />
      <param name="base_frame" value="$(arg agent)/base_link" />
      <param name="map_frame" value="$(arg agent)/$(arg map_topic)" />
    </node>

  </group>

</launch>
