<launch>

  <arg name="agent" default="$(env AGENT)" />

  <arg name="scan_topic"  default="scan"/>
  <arg name="map_topic"   default="map_hokuyo"/>
  <arg name="odom_frame"  default="$(arg agent)/odom_laser"/>
  <arg name="base_frame"  default="$(arg agent)/base_link"/>
  <arg name="map_frame"   default="$(arg agent)/map_hokuyo"/>

  <group ns="$(arg agent)">

    <node pkg="gmapping" type="slam_gmapping" name="mapping"
          output="screen" >
      <remap from="scan" to="$(arg scan_topic)" />
      <remap from="map"  to ="$(arg map_topic)" />
      <param name="odom_frame"          value="$(arg odom_frame)" />
      <param name="base_frame"          value="$(arg base_frame)" />
      <param name="map_frame"           value="$(arg map_frame)" />
      <param name="temporalUpdate"      value="2.0"/>
      <param name="map_update_interval" value="2.0"/>
    </node>

  </group>

</launch>
